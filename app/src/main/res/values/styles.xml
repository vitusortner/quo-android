<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="titleTextColor">@color/colorSecondary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="CardViewTitleFont">
        <item name="android:textSize">@dimen/home_cardview_title_textsize</item>
        <item name="android:textColor">@color/colorHomeCardViewTitle</item>
    </style>

    <style name="CardViewDescriptionFont">
        <item name="android:textSize">@dimen/home_cardview_description_textsize</item>
        <item name="android:textColor">@color/colorHomeCardViewPreview</item>
    </style>

</resources>
