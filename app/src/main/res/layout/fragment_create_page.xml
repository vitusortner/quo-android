<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/placePreviewCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/home_cardview_margin"
        android:layout_marginLeft="@dimen/home_cardview_margin"
        android:layout_marginRight="@dimen/home_cardview_margin"
        android:layout_marginTop="@dimen/home_cardview_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/mainEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/event_middle_margin_top"
                android:background="@color/white"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:minLines="1"
                android:padding="@dimen/event_description_padding"
                android:scrollbars="vertical"
                android:textColor="@color/colorGray"
                android:theme="@style/EditTextTheme" />

            <TextView
                android:id="@+id/tempLine1TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:hint="@string/page_temp_line1_text" />

            <TextView
                android:id="@+id/tempLine2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tempLine1TextView"
                android:layout_centerInParent="true"
                android:hint="@string/page_temp_line2_text" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:src="@drawable/ic_add" />

            <ImageButton
                android:id="@+id/roundGalleryButton"
                android:layout_width="@dimen/round_button_small_size"
                android:layout_height="@dimen/round_button_small_size"
                android:layout_above="@id/floatingActionButton"
                android:layout_alignParentEnd="true"
                android:layout_margin="24dp"
                android:background="@drawable/round_button"
                android:elevation="@dimen/event_gallery_button_elevation"
                android:padding="@dimen/event_gallery_button_padding"
                android:src="@drawable/ic_camera"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/roundEditButton"
                android:layout_width="@dimen/round_button_small_size"
                android:layout_height="@dimen/round_button_small_size"
                android:layout_above="@id/roundGalleryButton"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="24dp"
                android:background="@drawable/round_button"
                android:elevation="@dimen/event_gallery_button_elevation"
                android:padding="@dimen/event_gallery_button_padding"
                android:src="@drawable/ic_camera"
                android:visibility="gone" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>