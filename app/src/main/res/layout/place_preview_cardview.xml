<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/placePreviewCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/cardview_margin_bottom"
    android:layout_marginStart="@dimen/cardview_margin_start"
    android:layout_marginEnd="@dimen/cardview_margin_end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/placePreviewImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_cardview_image_height" />

        <TextView
            android:id="@+id/placePreviewTitleTextView"
            style="@style/CardViewTitleFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/home_cardview_textview_padding"
            android:paddingStart="@dimen/home_cardview_textview_padding" />

        <TextView
            android:id="@+id/placePreviewDescriptionTextView"
            style="@style/CardViewDescriptionFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/home_cardview_textview_padding"
            android:paddingEnd="@dimen/home_cardview_textview_padding"
            android:paddingStart="@dimen/home_cardview_textview_padding" />
    </LinearLayout>
</android.support.v7.widget.CardView>